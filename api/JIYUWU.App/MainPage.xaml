<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JIYUWU.App.MainPage">
    <StackLayout Padding="30">
        <Label Text="{Binding GreetingText}" FontSize="24" HorizontalOptions="Center" />
        <Label Text="{Binding FarewellText}" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,0" />

        <Button Text="Switch to English" Clicked="OnSwitchToEnglishClicked" Margin="0,20,0,0"/>
        <Button Text="切换到中文" Clicked="OnSwitchToChineseClicked"/>
    </StackLayout>
</ContentPage>
